{
  "name": "generator-epub",
  "version": "0.0.1",
  "description": "Epub generator for yeoman",
  "keywords": [
    "yeoman-generator"
  ],
  "author": "Leonardo Fontana",
  "license": "ISC",
  "main": "generators/index.js",
  "scripts": {
    "build": "tsc && npm run copydeps && npm run lint",
    "copydeps": "copyfiles --up 1 'src/*/templates/**' generators",
    "lint": "eslint ./src --ext .js,.ts",
    "clean": "rimraf -rf ./generators",
    "watch": "npm run watch-tsc --silent & npm run watch-deps --silent",
    "watch-deps": "onchange 'src/*/templates/**' --initial -- npm run copydeps --silent",
    "watch-tsc": "tsc-watch --onSuccess 'npm run lint --silent'",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "dependencies": {
    "yeoman-generator": "^5.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/yeoman-generator": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "^8.3.0",
    "mocha": "^9.1.3",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.5.2",
    "yeoman-test": "^6.2.0"
  }
}
